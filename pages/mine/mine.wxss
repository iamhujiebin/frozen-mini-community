.mine {
  position: fixed;
  width: 100%;
  height: 280rpx;
  background-image: url('https://static.heytea.com/taro_trial/v1/img/home/InterestsModalBackground/new_vip_5.png');
  background-repeat: no-repeat;
  padding: 0 24rpx;
  background-size: 100% 100%;
}

.userinfo {
  margin-top: 192rpx;
  margin-bottom: 48rpx;
  height: 96rpx;
  line-height: 48rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #333;
  position: relative;
}

.userinfo__avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
  overflow: hidden;
}

button {
  /* button padding为0才能在图片中嵌套图片 */
  padding: 0;
}

.userinfo__name {
  font-size: 36rpx;
  line-height: 48rpx;
  color: #333;
  font-weight: bold;
  margin-left: 20rpx;
}